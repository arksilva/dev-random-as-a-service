        %div.navbar-collapse.collapse.navbar-warning-collapse
          %ul.nav.navbar-nav
            %li.active
              %a{'href': '#home'} Home
            %li
              %a{'href': '#features'} Features
            %li
              %a{'href': '#api'} API
            %li
              %a{'href': '#contact'} Contact
      %p
        Copyright 2015
        %a{'href': 'http://github.com/phoeagon'}
          phoeagon

    
